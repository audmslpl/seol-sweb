<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="spms.dao.BoardDao">
  <resultMap type="board" id="boardResultMap">
    <id column="BNO" property="no"/>
    <result column="BNAME"    property="title"/>
    <result column="CONTENT"  property="content"/>
    <result column="STA_DATE" property="startDate" javaType="java.sql.Date"/>
    <result column="END_DATE" property="endDate" javaType="java.sql.Date"/>
    <result column="STATE"    property="state"/>
    <result column="CRE_DATE" property="createdDate" javaType="java.sql.Date"/>
    <result column="TAGS"     property="tags"/>
  </resultMap>
  
  <select id="selectList" parameterType="map" resultMap="boardResultMap">
    select BNO, BNAME, STA_DATE, END_DATE, STATE
    from BOARDS
    order by
    <choose> 
        <when test="orderCond == 'TITLE_ASC'">BNAME asc</when>
        <when test="orderCond == 'TITLE_DESC'">BNAME desc</when>
        <when test="orderCond == 'STARTDATE_ASC'">STA_DATE asc</when>
        <when test="orderCond == 'STARTDATE_DESC'">STA_DATE desc</when>
        <when test="orderCond == 'ENDDATE_ASC'">END_DATE asc</when>
        <when test="orderCond == 'ENDDATE_DESC'">END_DATE desc</when>
        <when test="orderCond == 'STATE_ASC'">STATE asc</when>
        <when test="orderCond == 'STATE_DESC'">STATE desc</when>
        <when test="orderCond == 'PNO_ASC'">BNO asc</when>
        <otherwise>BNO desc</otherwise>
    </choose>
  </select>
  
  <insert id="insert" parameterType="board">
    insert into BOARDS(BNAME,CONTENT,STA_DATE,END_DATE,STATE,CRE_DATE,TAGS)
    values (#{title},#{content},#{startDate},#{endDate},0,now(),#{tags})
  </insert>
  
  <select id="selectOne" parameterType="int" resultMap="boardResultMap">
    select BNO, BNAME, CONTENT, STA_DATE, END_DATE, STATE, CRE_DATE, TAGS
    from BOARDS 
    where BNO=#{value}
  </select>
  
  <update id="update" parameterType="map">
    update BOARDS 
    <set>
      <if test="title != null">BNAME=#{title},</if>
      <if test="content != null">CONTENT=#{content},</if>
      <if test="startDate != null">STA_DATE=#{startDate},</if>
      <if test="endDate != null">END_DATE=#{endDate},</if>
      <if test="state != null">STATE=#{state},</if>
      <if test="tags != null">TAGS=#{tags}</if>
    </set>
    where BNO=#{no}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from BOARDS 
    where BNO=#{value}
  </delete>
</mapper>